
<div class="trialpartWrapper" style="float:left; width:295px;">
	<p>
	This is a <b><%= (see_sg) ? this.singular : "________" %></b>.
	<%= makeSoundButton(this.sgfile) %>
	</p>
	<p>
	<img src="resources/pictures/<%= picture.pic1 %>" width="160" style="padding:10px; border: none;"><br>
	</p>
</div>

<div class="trialpartWrapper" style="float:right; width:295px;">
	<p>
	<% if (see_pl) { %>
	
	These are <b><%= this.plural %></b>.
